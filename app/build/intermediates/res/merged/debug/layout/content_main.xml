<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B2B2B2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Virals of The Moment"
        android:textColor="#E91E63"
        android:textSize="20sp"
        android:id="@+id/top_viral_text_id"
        android:textStyle="bold"
        android:background="#FAFAFA"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#212121">
    </View>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_viral_id">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/horizontal_image_viral_layout"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#212121">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Memes of The Moment"
        android:textColor="#EF5350"
        android:textSize="20sp"
        android:id="@+id/top_mems_text_id"
        android:textStyle="bold"
        android:background="#FAFAFA"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#212121">
    </View>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_memes_id">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/horizontal_image_memes_layout"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#212121">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top News"
        android:gravity="center_horizontal"
        android:id="@+id/top_news_id"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#EF5350"
        android:background="#EEEEEE"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#212121">
    </View>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_list_id"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"/>

</LinearLayout>
